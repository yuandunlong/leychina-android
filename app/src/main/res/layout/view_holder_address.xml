<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/address_man_text_view"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="yuandunlong" />

    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/address_man_text_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="江苏省徐州市丰县高李庄" />


    <TextView
        android:layout_marginRight="100dp"
        android:text="183493938976"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:id="@+id/address_phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/address_status_image_view"
        android:layout_marginRight="5dp"
        android:src="@drawable/circle"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_d2d2d2"
        android:layout_alignParentBottom="true"
        >

    </View>
</RelativeLayout>