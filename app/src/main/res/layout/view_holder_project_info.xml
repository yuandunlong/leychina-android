<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/image_view_project_cover"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:textSize="16sp"
        android:layout_margin="6dp"
        android:id="@+id/text_view_project_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="6dp"
        android:id="@+id/text_view_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:layout_margin="6dp"
        android:id="@+id/text_view_current_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="16sp"
        android:layout_margin="6dp"
        android:id="@+id/text_view_support_times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="16sp"
        android:layout_margin="6dp"
        android:id="@+id/text_view_total_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:layout_margin="6dp"
        android:id="@+id/text_view_deadline_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>