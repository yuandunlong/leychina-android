<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leychina">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".activity.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.MainActivity"
            android:hardwareAccelerated="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SignUpActivity" />

        <activity android:name=".activity.SignInActivity" />
        <activity android:name=".activity.ProjectDetailActivity" />
        <activity android:name=".activity.ProjectDetailActivity2"/>
        <activity android:name=".activity.ArtistGridViewActivity" />
        <activity android:name=".activity.SupportActivity"/>
        <activity android:name=".activity.ArtistDetailActivity"/>
        <activity android:name=".activity.ChooseAddressActivity"/>
        <activity android:name=".activity.AddAddressActivity"/>
        <activity android:name=".activity.PayOrderActivity"/>
    </application>

</manifest>
